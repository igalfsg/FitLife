<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flegmann.fitbuddyapp.Exersise_Display"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bac_image">

        <TextView
            android:id="@+id/myprogstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/logo_icon"
            android:text="  CHANGE WEIGHT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_wko_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:onClick="imageClick"
        android:src="@drawable/btn_createwko" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_newwko"
        android:layout_alignTop="@+id/create_wko_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="imageClick"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/btn_add_wko" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_above="@+id/create_wko_button"
        android:layout_below="@+id/relativeLayout1" />
</RelativeLayout>
