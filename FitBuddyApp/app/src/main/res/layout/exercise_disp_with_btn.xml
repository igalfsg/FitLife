<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flegmann.fitbuddyapp.Exersise_Display"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bac_image" >

        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search"
            android:drawableRight="@drawable/search_icon"
            android:ems="10"
            android:hint="Search.."
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/title_ex_disp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/inputSearch"
            android:layout_alignRight="@+id/inputSearch"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="67dp"
            android:drawableLeft="@drawable/logo_icon"
            android:text="  EXCERCISE DISPLAY"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dlete_exercise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:onClick="imageClick"
        android:src="@drawable/btn_delete" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_done_dispwithbtn"
        android:layout_alignTop="@+id/dlete_exercise"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="imageClick"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/btn_done" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_above="@+id/dlete_exercise"
        android:layout_below="@+id/relativeLayout1" />
</RelativeLayout>
