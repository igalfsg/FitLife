<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
    android:id="@+id/tiestin">

    <com.flegmann.fitbuddyapp.CircleImageView
        android:id="@+id/real_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/a"/>
    <TextView
        android:id="@+id/real_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toRightOf="@+id/real_image"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_toStartOf="@+id/linearLayout2" android:gravity="left|center_vertical"
        android:maxLines="2" android:text="Lorem Ipsum"/>
    <CheckBox
        android:id="@+id/real_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Done"/>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/real_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reps:1"/>

        <TextView
            android:id="@+id/real_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="steps:2"/>
        <TextView
            android:id="@+id/real_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"/>
    </LinearLayout>
</RelativeLayout>
