<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="${relativePackage}.${activityClass}">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bac_image">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/logo_icon"
            android:text="   CREATE WKO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/wko_name_create"
        android:layout_width="wrap_content"
        android:hint="Workout Name"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/relativeLayout"/>
</RelativeLayout>